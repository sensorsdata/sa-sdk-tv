<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:text="不包括 V7 包下的 PopupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/androidWidget"
        android:text="Android Widget包"
        android:textAllCaps="false"
        android:onClick="doOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/androidCompat"
        android:text="AppCompat 包"
        android:textAllCaps="false"
        android:onClick="doOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/lambdaAndroidWidget"
        android:text="Android Widget包-Lambda"
        android:textAllCaps="false"
        android:onClick="doOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/lambdaAndroidCompat"
        android:text="AppCompat 包-Lambda"
        android:textAllCaps="false"
        android:onClick="doOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>